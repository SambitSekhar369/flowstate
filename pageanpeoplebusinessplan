    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const financialData = {
                labels: ['Year 1', 'Year 2', 'Year 3'],
                datasets: [
                    {
                        label: 'Total Revenue (USD)',
                        data: [187500, 3200000, 22500000],
                        borderColor: '#16A34A',
                        backgroundColor: 'rgba(22, 163, 74, 0.1)',
                        fill: true,
                        tension: 0.4,
                    },
                    {
                        label: 'Total Expenses (USD)',
                        data: [950000, 2500000, 9000000],
                        borderColor: '#DC2626',
                        backgroundColor: 'rgba(220, 38, 38, 0.1)',
                        fill: true,
                        tension: 0.4,
                    },
                    {
                        label: 'EBITDA (USD)',
                        data: [-762500, 700000, 13500000],
                        borderColor: '#2563EB',
                        backgroundColor: 'rgba(37, 99, 235, 0.1)',
                        fill: true,
                        tension: 0.4,
                    }
                ]
            };

            const financialsCtx = document.getElementById('financialsChart').getContext('2d');
            const financialsChart = new Chart(financialsCtx, {
                type: 'line',
                data: financialData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: false,
                            ticks: {
                                callback: function(value, index, values) {
                                    if (value >= 1000000) return '$' + (value / 1000000) + 'M';
                                    if (value >= 1000) return '$' + (value / 1000) + 'K';
                                    return '$' + value;
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            const marketSizeData = {
                labels: ['Total Addressable Market (TAM)', 'Serviceable Available Market (SAM)', 'Serviceable Obtainable Market (SOM)'],
                datasets: [{
                    label: 'Market Size (USD Billions)',
                    data: [1350, 250, 20],
                    backgroundColor: [
                        '#FDE68A', // TAM
                        '#FBBF24', // SAM
                        '#D97706'  // SOM
                    ],
                    hoverOffset: 4
                }]
            };

            const marketSizeCtx = document.getElementById('marketSizeChart').getContext('2d');
            const marketSizeChart = new Chart(marketSizeCtx, {
                type: 'doughnut',
                data: marketSizeData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                             callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed !== null) {
                                        label += '$' + context.parsed.toLocaleString() + ' Billion';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });
            
            const kpiData = {
                MAUs: {
                    labels: ['Year 1 Target', 'Year 2 Target', 'Year 3 Target'],
                    data: [75000, 400000, 1500000],
                    title: 'Monthly Active Users (MAUs)',
                    formatter: (value) => value.toLocaleString()
                },
                Retention: {
                    labels: ['Year 1 Target', 'Year 2 Target', 'Year 3 Target', 'Industry Avg.'],
                    data: [10, 15, 20, 3.9],
                    title: 'Day 30 Retention Rate (%)',
                    formatter: (value) => value + '%'
                },
                ARPU: {
                    labels: ['Year 1 Target', 'Year 2 Target', 'Year 3 Target'],
                    data: [2.5, 8.0, 15.0],
                    title: 'Average Revenue Per User (ARPU)',
                    formatter: (value) => '$' + value.toFixed(2)
                },
                Stickiness: {
                    labels: ['Year 1 Target', 'Year 2 Target', 'Year 3 Target', 'Good Benchmark'],
                    data: [25, 30, 35, 20],
                    title: 'DAU/MAU Ratio (%)',
                    formatter: (value) => value + '%'
                }
            };
            
            const kpiCtx = document.getElementById('kpiChart').getContext('2d');
            let kpiChart;

            function createOrUpdateKpiChart(kpiKey) {
                const selectedData = kpiData[kpiKey];
                
                if (kpiChart) {
                    kpiChart.destroy();
                }

                kpiChart = new Chart(kpiCtx, {
                    type: 'bar',
                    data: {
                        labels: selectedData.labels,
                        datasets: [{
                            label: selectedData.title,
                            data: selectedData.data,
                            backgroundColor: [
                                'rgba(217, 119, 6, 0.7)',
                                'rgba(251, 191, 36, 0.7)',
                                'rgba(253, 224, 71, 0.7)',
                                'rgba(203, 213, 225, 0.7)'
                            ],
                            borderColor: [
                                'rgb(217, 119, 6)',
                                'rgb(251, 191, 36)',
                                'rgb(253, 224, 71)',
                                'rgb(203, 213, 225)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return selectedData.formatter(value);
                                    }
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            title: {
                                display: true,
                                text: selectedData.title,
                                font: {
                                    size: 18
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return selectedData.formatter(context.parsed.y);
                                    }
                                }
                            }
                        }
                    }
                });
            }

            createOrUpdateKpiChart('MAUs');

            document.addEventListener('kpi-change', (event) => {
                createOrUpdateKpiChart(event.detail.kpi);
            });

            // Smooth scrolling for nav links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
</body>
</html>
